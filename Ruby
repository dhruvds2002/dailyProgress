#String Properties

=begin
str5="hello"
s=str5.reverse
puts str5.size
puts str5.length

puts str5.upcase
puts str5.downcase
puts s.capitalize!   #To k=make first letter capital
=end

#Day2 
# Replacing string with other String

=begin
print "Thtring, pleathe!: "
user_input = gets.chomp
user_input.downcase!

if user_input.include? "s"
  user_input.gsub!(/s/, "th")
else
  puts "Nothing to do here!"
end
puts "Your string is: #{user_input}"
=end

#Loops
# While Loop Syntax
=begin
counter = 1
while counter < 11
  puts counter
  counter = counter + 1           # ++ and -- can't be used in Ruby
end
=end

# For Loop Syntax

=begin
for num in 1..15                  #   .. includes last number whereas ... excludes last element
  puts num
end
=end

# Loop Method, Next, Break

=begin
i = 20
loop do
  i -= 1
  next if i%2!=0                  # next keyword is same as continue
  print "#{i}"
  break if i <= 0
end
=end

# .each iterator

=begin
array=[1,2,3,4,5]
array.each do |x|
x+=10
puts "#{x}"
end
=end

# .times iterator

=begin
10.times{puts "Hello"}            #it can perform a task on each item in an object a specified number of times
=end


# Hashes
# Syntax

=begin
hash = {
  key1 => value1,
  key2 => value2,
  key3 => value3
}
=end

#Number Greater than 5

=begin
a=[17, 7, 3, 6, 10, 1]

a.each do|x|
  if x>5
    print"#{x} "
  end
end
=end


# Factorial

=begin
puts"Enter a number:"
n=gets.chomp.to_i

fact=1
for i in 1..n
  fact*=i
  i-=1
end
puts fact
=end


# Prime Number

=begin
puts"Enter a number:"
n=gets.chomp.to_i
flag=1
if n==0
  print "#{n} is not a Prime Number"
elsif n==1
  print "#{n} is a Prime Number"
else
i=2
  while i<=n/2
   if n%i==0
     flag=0
   end
    i=i+1
  end
  if flag==0
    print "#{n} is not a Prime Number"
  else
    print "#{n} is a Prime Number"
  end
end
=end
